<h1><%= @order.order_number %></h1>
<h1><%= @order.person_name %></h1>

<p><%= @order.delivery_contact %></p>

<p><%= @order.delivery_address %></p>

<p><%= @order.delivery_city %></p>

<p><%= @order.delivery_state %></p>

<p><%= @order.delivery_pin_code %></p>

<ul>
  <li><%= link_to "Edit", edit_order_path(@order) %></li>
  <li><%= link_to "Delete", order_path(@order), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
  <li><%= link_to "Back", :back %></li>
</ul>

